<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_6sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_left_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/sample_call_picker"
        android:padding="@dimen/_6sdp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Hello there, This is me"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@drawable/chat_left_bg"
        android:padding="@dimen/_6sdp"
        android:fontFamily="@font/sf_ui_medium"
        android:layout_toEndOf="@+id/chat_left_icon"
        android:layout_marginStart="@dimen/_5sdp"/>

</RelativeLayout>