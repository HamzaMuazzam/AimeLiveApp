<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dull_black"
    android:layout_margin="@dimen/_1sdp"
    android:elevation="@dimen/_50sdp"
    >

    <LinearLayout
        android:id="@+id/social_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/profile_girl"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/_2sdp"
                android:layout_margin="@dimen/_5sdp"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/heart"
            android:text="1120"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/sf_ui_medium"
            android:layout_margin="@dimen/_5sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/comment_processing_white"
            android:text="1120"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/sf_ui_medium"
            android:layout_margin="@dimen/_5sdp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/share"
            android:text="1120"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/sf_ui_medium"
            android:layout_margin="@dimen/_5sdp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/social_button_layout"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_tiktok_name"
            android:textColor="@color/bright_green"
            style="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/sf_ui_medium"
            android:padding="@dimen/_10sdp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_tiktok_verse"
            android:textColor="@color/white"
            android:fontFamily="@font/sf_ui_medium"
            style="@style/TextAppearance.AppCompat.Medium"
            android:padding="@dimen/_10sdp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jugin Proud 90s kid origional"
            android:textColor="@color/white"
            style="@style/TextAppearance.AppCompat.Small"
            android:drawableStart="@drawable/music_note"
            android:fontFamily="@font/sf_ui_medium"
            android:drawablePadding="@dimen/_6sdp"
            android:padding="@dimen/_10sdp"/>



    </LinearLayout>

</RelativeLayout>